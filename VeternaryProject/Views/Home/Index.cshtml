
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" >
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            @*<li data-target="#myCarousel" data-slide-to="2"></li>*@
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                @*<img src="la.jpg" alt="Los Angeles" style="width:100%;">*@
                <img src="~/Images/dog-wallpaper-preview-12.jpg" class="img-responsive" style="width:100%;height:360px;" />
            </div>

            <div class="item">
                @*<img src="chicago.jpg" alt="Chicago" style="width:100%;">*@
                <img src="~/Images/cute-dogs-1.jpg" class="img-responsive" style="width:100%;height:360px;" />
            </div>

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <br />
    <div class="row">
        <div class="col-md-5 img-thumbnail">
            <img src="~/Images/puppy-yawning-veterinary-hospital-and-surgery.jpg" class="img-responsive" style="height:360px" />
            <p class="text-center" style=" font-size:x-large; color: darkblue">
                About us
            </p>
        </div>
        <div class="col-md-5 img-thumbnail">
            <img src="~/Images/surgeon-with-dog-veterinary-hospital-and-surgery.jpg" class="img-responsive" style="height:360px" />
            <p class="text-center" style=" font-size:x-large; color: darkblue">
                Pet advice
            </p>
        </div>
        <div class="col-md-2">
            <div class="col-md-12">
                <div class="row" style="width : 100%;height:75px;">

                </div>
            </div>
            <div class="col-md-12">
                <div class="row ">
                    <a href="~/Appointment/AppointmentRegistration">
                    @*<a href="~/Views/Appointment/AppointmentRegistration.cshtml">*@
                        <img src="~/Images/register.jpg" class="img-responsive center-block img-circle " style="width : 100%;height:30%;" />
                    </a>
                </div>
            </div>
            <div class="col-md-12">
                <div class="row" style="width : 100%;height:75px;">

                </div>
            </div>
            <div class="col-md-12">
                <div class="row">
                    <p class="text-info text-center" style="font-style:italic;">"Healing in a matter of time, but it is sometimes also a matter of opportunity.  "</p>
                </div>
            </div>
        </div>
    </div>

</div>

